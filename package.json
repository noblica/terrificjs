    "gulp-concat": "^2.6.1",
    "gulp-config-sync": "^1.0.2",
    "gulp-jscs": "^4.1.0",
    "gulp-jshint": "^2.1.0",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.0",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-template": "^5.0.0",
    "gulp-uglify": "^3.0.0",
    "gulp-umd": "^0.2.1",
    "gulp-watch": "^5.0.0",
    "gulp-yuidoc": "^0.1.2",
    "jasmine": "^2.1.1",
    "jest": "^22.1.1",
    "jshint": "^2.9.5",
    "jshint-stylish": "^1.0.0",
    "karma": "^2.0.0",
