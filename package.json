  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(spec/jest/.*|(\\.|/)(test|spec))\\.(js?|ts?)$"
  },
  "dependencies": {
    "es5-shim": "^4.5.10",
    "es6-promise": "^4.2.2"
